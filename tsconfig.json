{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./build/",
    "baseUrl": "./",
    "incremental": true,
    "strict": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strictPropertyInitialization": false
  }
}